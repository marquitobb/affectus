<h2 class="mt-5"><%=nombrePagina %></h2>
<div class="container mt-5">
    <form method="POST" action="/cambiar-password">
        <div class="form-group row">
            <label for="password" class="col-md-4 col-form-label text-md-right">Contraseña Actual</label>
            <div class="col-md-6">
                <input type="password" id="password" class="form-control" name="anterior" placeholder="Contraseña actual">
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-md-4 col-form-label text-md-right">Nueva Contraseña</label>
            <div class="col-md-6">
                <input type="password" id="newPassword" class="form-control" name="nuevo_password"
                    placeholder="Contraseña nueva">
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-md-4 col-form-label text-md-right">Confirmar Contraseña</label>
            <div class="col-md-6">
                <input type="password" id="newPasswordConfir" class="form-control" name="nuevo_password_confirm"
                    placeholder="Confirmar nueva contraseña">
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary float-right" value="Cambiar contraseña"></input>
        </div>
    </form>
</div>

<div style="height: 0px; width: 0px;">
    <%- include('partials/barra-lateral.ejs', {nombre:usuario.nombre ,estrategias: estrategias, citas}) %>
