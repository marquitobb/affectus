<h2 class="mt-5"><%=nombrePagina %></h2>
<div class="container mt-5">
    <form method="POST" action="/cambiar-password">
        <div class="form-group row">
            <label for="password" class="col-md-4 col-form-label text-md-right">Password Actual</label>
            <div class="col-md-6">
                <input type="password" id="password" class="form-control" name="anterior" placeholder="Password actual">
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-md-4 col-form-label text-md-right">Nueva Password</label>
            <div class="col-md-6">
                <input type="password" id="password" class="form-control" name="nuevo_password" placeholder="Password Nueva">
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary float-right" value="Cambiar Password"></input>
        </div>
  </form>
</div>