<body>
    <div class="hero">
        <h1>Encuentra ayuda para tu bienestar</h1>
        <a href="/crear-cuenta" class="btn btn-amarillo">Obtener Cuenta</a>
    </div>

    <div class="buscador-inicio" id="buscadorAyudaPais">
        <div class="contenedor">
            <h2>Busca ayuda en tu pais</h2>
            <form action="#">
                <select name="categoria">
                    <option value="" disabled selected>-- Selecciona Categoría --</option>
                    <option value="programacion">Psicologia</option>
                    <option value="diseno">Coaching</option>
                    <option value="libros">Motivacion</option>
                </select>
                <input type="text" name="nombre" placeholder="Nombre Grupo">
                <input type="text" name="pais" placeholder="País">
                <input type="submit" value="Buscar" class="btn btn-rosa">
            </form>
        </div>
    </div>

    <div class="contenedor mt-4" id="estrategiasSalud">
        <h2>Actividades Importantes Para tu salud</h2>
        <div class="grid columnas-md-3 ">
            <% estrategias.forEach(estrategia => { %>
            <div class="card">
                <% if(estrategia.imagen) { %>
                <img class="lazy" src="/uploads/estrategias/<%=estrategia.imagen %>">
                <% } else { %>
                <img class="lazy" src="/img/leer.png">
                <% } %>
                <div class="card-body">
                    <h5 class="card-title font-weight-bold"><%=estrategia.nombre %></h5>
                    <p class="card-text text-center font-italic"><%=estrategia.descripcion %></p>
                    <p class="card-text"><small class="text-muted"><%=categorias.nombre %></small></p>
                    <p class="card-text text-right"><small class="text-muted"><%=estrategia.fecha_creacion %></small></p>
                    <!--<hr />
                    <p class="card-text text-right"><small class="">Responsable: <%=estrategia.usuario.nombre %></small></p>
                    <p class="card-text text-right"><small class="font-italic"><%=estrategia.usuario.email %></small></p>-->
                </div>
                <div class="card-footer d-flex">
                    <small class="text-muted mr-auto"><a href="/index" class="m-4">Chat Grupal</a></small>                    
                    <small class="text-muted ,l-auto"><a href="/chatIndividual/<%=estrategia.usuario.email%>" class="m-4">Chat Individual</a></small>
                  </div>
            </div>


            <!--<div class="card">
                <% if(estrategia.imagen) { %>
                <img src="/uploads/estrategias/<%=estrategia.imagen %>">
                <% } else { %>
                <img src="/img/leer.jpg">
                <% } %>
                <div class="card-texto">
