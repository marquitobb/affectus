<!-- sidebar-wrapper  -->
<main class="page-content">
    <div class="container">
      <!-- <h1><%=nombrePagina %></h1> -->
      <hr>

      <ul class="nav nav-pills nav-fill" id="pills-tab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab"
            aria-controls="pills-home" aria-selected="true">Datos Personales</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab"
            aria-controls="pills-profile" aria-selected="false">Datos de Familiares Cercanos</a>
        </li>
      </ul>

      <hr>
      <div class="container">
        <div class="row">
          <div class="col-12 my-2">
            <form action="" method="POST">
                <div class="tab-content" id="pills-tabContent">
                    <!-- INICIO DATOS PERFIL -->
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="text" class="form-control" id="nombre" placeholder="Nombre" name="nombre" value="<%=usuario.nombre%>" >
                        </div>
                        <div class="form-group">
                            <label for="descripcion">Mi descripción</label>
                            <textarea class="form-control" name="descripcion" placeholder="ingrese descripcion">
                                <%=usuario.descripcion%>
                            </textarea>
                        </div>
                        <div class="form-group">
                            <label for="nombre">Email</label>
                            <input type="text" class="form-control" id="email" placeholder="email" name="email" value="<%=usuario.email%>">
                        </div>
                        <!-- <div class="form-group">
                            <input type="submit" class="btn btn-primary float-right" value="Guardar Cambios"></input>
                        </div> -->
                    </div>
                    <!-- FIN DATOS PERFIL -->

                    <!-- INICIO DATOS GENERALES -->
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                              <label for="genero">Genero</label>
                              <select id="genero" class="form-control" name="genero">
                                <option selected>--Selecciona una opcion--</option>
                                <option value="1">Masculino</option>
                                <option value="2">Femenino</option>
                                <option value="3">No quiero especificarlo</option>
                              </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="fechanacimiento">Fecha de nacimiento</label>
                                <input type="date" class="form-control" name="fechanacimiento" id="fechanacimiento" value="<%=usuario.fechanacimiento %>">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="ocupacion">Ocupación</label>
                                <input type="text" class="form-control" name="ocupacion" id="ocupacion" placeholder="Ej. Obrero, Ingeniero, Doctor" value="<%=usuario.ocupacion %>">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                              <label for="direccion">Direccion</label>
                              <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Ej. Miguel Bravo #123 Bella Vista" value="<%=usuario.direccion %>">
                            </div>
                            <div class="form-group col-md-3">
                              <label for="discapacidad">Discapacidad</label>
                              <select id="discapacidad" class="form-control" name="discapacidad">
                                <option selected>--Selecciona una opción--</option>
                                <option value="1">Si</option>
                                <option value="2">No</option>
                              </select>
                            </div>

                            <div class="form-group col-md-3">
                              <label for="telefono">Teléfono</label>
                              <input type="number" class="form-control" id="telefono" name="telefono" placeholder="111-111-1111" value="<%=usuario.telefono %>">
                            </div>
                          </div>
                    </div>
                    <!-- FIN DATOS PERFIL -->
                </div>
                <input type="submit" value="Guardar Información" class="btn btn-primary float-right">
            </form>
          </div>
        </div>
      </div>
    </div>

  </main>


