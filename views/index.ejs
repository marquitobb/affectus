<!DOCTYPE html>
<html lang="es">

<head>
	<link rel="stylesheet" href="/css/style.css" />
	<title>ChatCord App</title>
</head>

<body>
	<a class="ir-arriba" javascript:void(0) title="Volver arriba">
		<span class="fa-stack">
			<i class="fa fa-circle fa-stack-2x"></i>
			<i class="fa fa-arrow-up fa-stack-1x fa-inverse"></i>
		</span>
	</a>
	<div class="join-container">
		<header class="join-header">
			<h1><i class="fas fa-smile"></i> Affectus</h1>
		</header>
		<main class="join-main">
			<form action="/chat" id="formGrupo">
				<div class="form-control">
					<input type="hidden" name="username" id="username" value="<%=usuario %>" />
				</div>
				<div class="form-control">
					<label for="room">Categoria</label>
					<select name="room" id="room">
						<option value="" selected disabled>--Elige una categoria--</option>
						<% categorias.forEach(categoria => { %>
						<option value="<%=categoria.id%>"><%=categoria.nombre %></option>
						<% }) %>
					</select>
				</div>
				<button type="submit" class="btn">Join Chat</button>
			</form>
		</main>
	</div>
	<script src="/socket.io/socket.io.js"></script>
	<script src="/js/app.js"></script>
</body>

</html>