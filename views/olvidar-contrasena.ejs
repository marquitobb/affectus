<main class="login-form mt-5">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center"><%=nombrePagina%></div>
                    <div class="card-body">
                        <form action="/forgot-pass" method="POST">
                            <div class="d-flex">
                                <label class="col-form-label mx-auto">Enter your email address to receive Reset Password
                                    email</label>
                            </div>
                            <div class="form-group row mt-3">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail
                                    Address</label>
                                <div class="col-md-6">
                                    <input type="email" placeholder="User e-mail" id="email_address" class="form-control"
                                        name="email" autofocus required>
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Cambiar
                                </button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>