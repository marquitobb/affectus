<div class="container">
    <h1><%=nombre %>, BIENVENIDO DE NUEVO</h1>
    <hr>
    <% if (usuario.rol == 1) {
        %>
    <div id="sentimientosPrincipal">
        <div class="d-flex">
            <h4 class="mx-auto">¿Cómo te sientes hoy?</h4>
            <div id="cerrarSentimientosPrincipal">
                <button class="btn btn-light"><i class="fas fa-times"></i></button>
            </div>
        </div>
        <div class="row mx-auto">
            <div class="col-md-1"></div>
            <div class="col-md-2">
                <a class="sentimientoFeliz" href="">
                    <div class="d-flex">
                        <img width="60" class="mx-auto" src="/img/feliz.png" alt="Feliz">
                    </div>
                    <h5 class="text-center mt-2">Feliz</h5>
                </a>
            </div>
            <div class="col-md-2">
                <a class="sentimientoTriste" href="">
                    <div class="d-flex">
                        <img width="60" class="mx-auto" src="/img/triste.png" alt="Triste">
                    </div>
                    <h5 class="text-center mt-2">Triste</h5>
                </a>
            </div>
            <div class="col-md-2">
                <a class="sentimientoEnojado" href="">
                    <div class="d-flex">
                        <img width="60" class="mx-auto" src="/img/enojada.png" alt="Enojado">
                    </div>
                    <h5 class="text-center mt-2">Enojado/a</h5>
                </a>
            </div>
            <div class="col-md-2">
                <a class="sentimientoPreocupado" href="">
                    <div class="d-flex">
                        <img width="60" class="mx-auto" src="/img/preocupada.png" alt="Preocupado">
                    </div>
                    <h5 class="text-center mt-2">Preocupado/a</h5>
                </a>
            </div>
            <div class="col-md-2">
                <a class="sentimientoSorprendido" href="">
                    <div class="d-flex">
                        <img width="60" class="mx-auto" src="/img/sorprendida.png" alt="Sorprendido">
                    </div>
                    <h5 class="text-center mt-2">Sorprendido/a</h5>
                </a>
            </div>
        </div>
        <hr>
    </div>
    <%
    } %>

    <div class="row">
        <% estrategias.forEach(estrategia => { %>
        <div class="col-md-6 mb-3">
            <%- include('partials/card-recurso.ejs', {estrategia: estrategia}) %>
        </div>
        <% }) %>
    </div>
</div>
<div style="height: 0px; width: 0px;">
    <%- include('partials/barra-lateral.ejs', {nombre:usuario.nombre ,estrategias: estrategias}) %>
